<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".quiz.FinishQuiz">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:foregroundGravity="clip_horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/final_score_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center_horizontal"
            android:text="@string/final_score"
            android:textColor="@color/light_green"
            android:textSize="55sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quiz_score_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center_horizontal"
            android:text="X%"
            android:textColor="@color/light_green"
            android:textSize="70sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/finish_quiz_nav_btns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:background="@color/purple_200"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/finish_quiz_next_lesson_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@android:drawable/btn_default"
                android:gravity="center_horizontal|center_vertical"
                android:padding="15dp"
                android:text="Next Lesson"
                android:textSize="20sp" />

            <Button
                android:id="@+id/finish_quiz_try_again_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@android:drawable/btn_default"
                android:gravity="center_horizontal|center_vertical"
                android:padding="15dp"
                android:text="Try Again"
                android:textSize="20sp" />

            <Button
                android:id="@+id/finish_quiz_review_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@android:drawable/btn_default"
                android:gravity="center_horizontal|center_vertical"
                android:padding="15dp"
                android:text="Review Lesson"
                android:textSize="20sp" />

            <Button
                android:id="@+id/finish_quiz_home_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@android:drawable/btn_default"
                android:gravity="center_horizontal|center_vertical"
                android:padding="15dp"
                android:text="Home"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>